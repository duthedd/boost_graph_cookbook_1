#include <cassert>
#include <vector>
#include "add_text_vertex.h"
#include "create_empty_undirected_text_vertices_graph.h"

boost::adjacency_list<
  boost::vecS,
  boost::vecS,
  boost::undirectedS,
  std::string
>
create_text_vertices_petersen_graph() noexcept
{
  auto g = create_empty_undirected_text_vertices_graph();
  using vd = decltype(create_empty_undirected_text_vertices_graph())::vertex_descriptor;


  std::vector<vd> v; //Outer
  for (int i=0; i!=5; ++i) {
    v.push_back(
      add_text_vertex(std::string(1,'A' + i), g)
    );
  }
  std::vector<vd> w; //Inner
  for (int i=0; i!=5; ++i) {
    w.push_back(
      add_text_vertex(std::string(1,'a' + i), g)
    );
  }
  //Outer ring
  for (int i=0; i!=5; ++i) {
    boost::add_edge(v[i], v[(i + 1) % 5], g);
  }
  //Spoke
  for (int i=0; i!=5; ++i) {
    boost::add_edge(v[i], w[i], g);
  }
  //Inner pentagram
  for (int i=0; i!=5; ++i) {
    boost::add_edge(w[i], w[(i + 2) % 5], g);
  }
  return g;
}
